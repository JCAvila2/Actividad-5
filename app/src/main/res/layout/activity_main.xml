<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/default_gap"
    tools:context=".MainActivity"
    tools:ignore="ContentDescription,MissingConstraints,HardcodedText">

    <TextView
        android:id="@+id/pantalla"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/pantalla"
        android:gravity="end"
        android:textAlignment="gravity"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/gridBotones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridBotones"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pantalla">

        <Button
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/default_gap"
            android:backgroundTint="@color/numerosColor"
            android:text="@string/_1"
            android:textColor="#ECEFF1"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/default_gap"
            android:backgroundTint="@color/numerosColor"
            android:text="@string/_2"
            android:textColor="#ECEFF1"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/default_gap"
            android:backgroundTint="@color/numerosColor"
            android:text="@string/_3"
            android:textColor="#ECEFF1"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/default_gap"
            android:backgroundTint="@color/numerosColor"
            android:text="@string/_4"
            android:textColor="#ECEFF1"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/default_gap"
            android:backgroundTint="@color/numerosColor"
            android:text="@string/_5"
            android:textColor="#ECEFF1"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/default_gap"
            android:backgroundTint="@color/numerosColor"
            android:text="@string/_6"
            android:textColor="#ECEFF1"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/button7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/default_gap"
            android:backgroundTint="@color/numerosColor"
            android:text="@string/_7"
            android:textColor="#ECEFF1"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/default_gap"
            android:backgroundTint="@color/numerosColor"
            android:text="@string/_8"
            android:textColor="#ECEFF1"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/default_gap"
            android:backgroundTint="@color/numerosColor"
            android:text="@string/_9"
            android:textColor="#ECEFF1"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/default_gap"
            android:backgroundTint="@color/numerosColor"
            android:text="@string/_0"
            android:textColor="#ECEFF1"
            app:layout_column="1"
            app:layout_row="4" />


    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>